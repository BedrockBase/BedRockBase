{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "typeRoots": ["./node_modules/@types", "./styles", "./backend/src/types"]
  },
  "include": [
    "lib/**/*.ts",
    "scripts/**/*.ts",
    "contexts/**/*.ts",
    "pages/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
